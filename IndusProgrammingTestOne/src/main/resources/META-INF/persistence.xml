<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="ProgrammingTestPU" transaction-type="RESOURCE_LOCAL">
		<!-- JPA Provider -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<!-- Entities -->
		<class>com.indus.training.persist.entity.CustomerEntity</class>
		<class>com.indus.training.persist.entity.OrderEntity</class>


		<!-- JDBC connection -->
		<properties>
			<!-- PostgreSQL Connection Properties -->
			<property name="javax.persistence.jdbc.driver"
				value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:5432/practiceTestDB" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password"
				value="Vin@y7036861911" />

			<!-- Hibernate Configuration -->
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
